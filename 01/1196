from decimal import Decimal as d,getcontext
getcontext().prec=500
e=d('2.')
def ln(x):
    plus=d('0')
    initial=d('1')
    while initial<=x:
        plus+=d('1')
        initial*=e
    plus-=d('1')
    initial/=e
    x/=initial
    ans=d('0')
    p=(x-d('1'))/(x+d('1'))
    power=p
    for i in range(45):
        ans+=d('2')/(d('2')*d(str(i))+d('1'))*power
        power*=p*p
    return ans+plus
def approx_harmonic(x):
    return ln(x)+d('1')/(d('2')*x)-d('1')/(d('12')*x*x)+d('1')/(d('120')*x*x*x*x)+g
def right_harmonic(n):
    i=d('1')
    ans=d('0.0')
    while i<=n:
        ans+=d('1')/i
        i+=d('1')
    return ans
def harmonic(x):
    if x>=d('100000'):
        return approx_harmonic(x)
    return right_harmonic(x)
def smallk(a,b):
    ans=d('0.0')
    i=d('1')
    while i<=b-d('1'):
        ans+=a/(a-i)
        i+=d('1')
    return ans+d('1')
g=d('0.')
a,b=map(d,input().split())
if b<=d('100000'):
    print('%.10f' %smallk(a,b))
    exit()
print('%.10f' %((harmonic(a)-harmonic(a-b))*a))
