n=int(input())
li=[list(map(int,input().split())) for _ in range(n)]
dp=[0]*(n+1)
for i in range(n-1,-1,-1):
    if i+li[i][0]-1<=n-1:
        if i!=n-1:
            dp[i]=max(dp[i+li[i][0]]+li[i][1],dp[i+1])
        else:
            dp[i]=dp[i+li[i][0]]+li[i][1]
    else:
        if i!=n-1:
            dp[i]=dp[i+1]
print(dp[0])
