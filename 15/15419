ans=[0,0,0]
n=int(input())
li=list(map(int,input().split()))
t=list(map(int,input().split()))
two=sum(li[i] for i in range(n) if i%3==0)
zero=sum(li[i] for i in range(n) if i%3==1)
one=sum(li[i] for i in range(n) if i%3==2)
for i in range(n):
    ans[(i+2)%3]+=two*t[i]
    ans[(i+1)%3]+=one*t[i]
    ans[i%3]+=zero*t[i]
print(*ans)
