import sys
s=sys.stdin.readline().strip()
d=len(s)
li=[[0 for _ in range(d+1)] for _ in range(d+1)]
for i in range(d):
    li[i][i]=1
    if i!=d-1:
        if s[i]==s[i-1]:
            li[i][i+1]=3
        else:
            li[i][i+1]=2
for i in range(d):
    for j in range(d):
        k=j+i
        if k>=d:
            break
        if s[j]==s[k]:
            li[j][k]=li[j+1][k]+li[j][k-1]+1
        else:
            li[j][k]=li[j+1][k]+li[j][k-1]-li[j+1][k-1]
print(li[0][-2])
